{% extends '::homeBase.html.twig' %}

{% block body %}

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div id="content">
        <style type="text/css"> 
            #content {
                margin-left:200px; 
                margin-right:200px;
                height: 500px;
                padding: 50px;
            }
        </style>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>

{% endblock %}