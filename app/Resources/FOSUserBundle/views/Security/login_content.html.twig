{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">

    <form  action="{{ path("fos_user_security_check") }}" class="col s8 offset-s2 talk-bubble tri-right round btm-left talktext"  method="POST" id='profilebubble'>
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="input-field col s6">
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        <label for="username">{{ 'security.login.username'|trans }}</label>
    </div>
    <div class="input-field col s6">
        <input type="password" id="password" name="_password" required="required" />
        <label for="password">{{ 'security.login.password'|trans }}</label>
    </div>
    <div class="input-field col s6">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    </div>



        <div class="row buttonrow">
            <button class="btn waves-effect waves-light wildbtn col s6 offset-s3" type="submit"  name="_submit" value="{{ 'security.login.submit'|trans }}">
                Enregistrer
                <i class="material-icons right">input</i>
            </button>
        </div>
</form>
