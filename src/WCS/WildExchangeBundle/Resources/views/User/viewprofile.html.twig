{% extends 'WCSWildExchangeBundle::homeBase.html.twig' %}

<html lang="en" class="no-js">

<head>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/css/materialize.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="styleprofile.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>


    <!-- Remplace le input file par défaut du navigateur -->

    <script>
        window.onload = function() {
            var c = document.getElementById('wilder')
            c.onchange = function() {
                if (c.checked == true) {
                    document.getElementById('answer').style.display = 'inline';
                } else {
                    document.getElementById('answer').style.display = '';
                }
            }
        }
    </script>


    <title>Mon profil</title>

</head>
{% block body %}

    <div class="container">

        <div class="row">
            <div class="col s8 offset-s2 talk-bubble tri-right round btm-left talktext" id='profilebubble'>
                <div class="row">
                    <div class="box">
                        <img id="avatar" src="deer2.fw.png" alt="Un petit soucis mais on sait que t'as la Wild Attitude" />
                    </div>

                </div>

                <div class="row">
                    <div class="input-field col s4 offset-s1">
                        <i class="material-icons prefix">account_circle</i>
                        <p id="lastname" type="text" class="validate">Skywilder</p>
                    </div>

                    <div class="input-field col s4 offset-s1">
                        <p id="firstname" type="text" class="validate">Luke</p>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s9 offset-s1">
                        <i class="material-icons prefix">email</i>
                        <p id="email" type="text" class="validate">luke.rebel@wildexchange.fr</p>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s9 offset-s1">
                        <i class="material-icons prefix">phone</i>
                        <p id="telephone" type="tel" class="validate">01.02.03.04.05</p>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s9 offset-s1">
                        <i class="material-icons prefix">star</i>
                        <p id="interests" class="materialize-textarea">Espace, Etoile, PHP, CodePen, Laser, Ours bizarres</input>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s9 offset-s1">
                        <i class="material-icons prefix">mode_edit</i>
                        <p id="description" class="materialize-textarea">"Je m'présente, je m'appelle Henri J'voudrais bien réussir ma vie, être aimé Être beau, gagner de l'argent Puis surtout être intelligent Mais pour tout ça il faudrait que j'bosse à plein temps !"</p>
                    </div>
                </div>



                <button class="btn waves-effect waves-light col s6 offset-s3" type="submit" name="action">
          Modifier mon compter
    <i class="material-icons right">input</i>
  </button>




            </div>

            <form method="post" accept-charset="UTF-8">
                {{ getCsrfInput() }}
                <input type="hidden" name="action" value="users/saveUser">
                <input type="hidden" name="redirect" value="users/{{ currentUser.username }}">
                <input type="hidden" name="userId" value="{{ currentUser.id }}">

                <label for="location">Location</label>
                <input type="text" id="location" name="fields[location]" value="{{ currentUser.location }}">

                <label for="bio">Bio</label>
                <textarea id="bio" name="fields[bio]">{{ currentUser.bio }}</textarea>

                <input type="submit" value="Save Profile">
            </form>
</body>

            {% endblock %}
