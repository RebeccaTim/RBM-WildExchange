{% extends "@FOSUser/layout.html.twig" %}
{% block fos_user_content %}
    {% include "@FOSUser/Profile/show_content.html.twig" %}
{% endblock fos_user_content %}
{% block body %}


    <div class="container">

        <form  class="col s8 offset-s2 talk-bubble tri-right round btm-left talktext" method="POST" id='profilebubble'>
            <div class="row">
                <div class=" col s4 offset-2">
                    <img id="avatar" src="#" alt="Un petit soucis mais on sait que t'as la Wild Attitude" />
                </div>

                <div class="input-field col s4 offset-s1">
                    <div>{{ user.username }}</div>

                </div>
            </div>

            <div class="row">
                <div class="input-field col s4 offset-s1">
                    <i class="material-icons prefix">account_circle</i>
                    <div>{{ user.firstname }}</div>


                </div>

                <div class="input-field col s4 offset-s1">
                    <div>{{ user.lastname }}</div>

                </div>
            </div>

            <div class="row">
                <div class="input-field col s9 offset-s1">
                    <i class="material-icons prefix">email</i>
                    <div>{{ user.email }}</div>

                </div>
            </div>

            <div class="row">
                <div class="input-field col s9 offset-s1">
                    <i class="material-icons prefix">phone</i>
                    <div>{{ user.phone }}</div>

                </div>
            </div>

            <div class="row">
                <div class="input-field col s9 offset-s1">
                    <i class="material-icons prefix">star</i>
                    <div> interest</div>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s9 offset-s1">
                    <i class="material-icons prefix">mode_edit</i>
                    <div> {{ user.description }}</div>
                </div>
            </div>


            <div class="row">

                <div class="switch col s8 offset-s2" align="center">


                </div>
            </div>

            <div class="row" id="situation" >
                <div class="input-field col s9 offset-s1">
                    <i class="material-icons prefix">android</i>
                    <div>   {{ user.situation }}</div>


                </div>
            </div>

            <div class="row buttonrow">
                <button class="btn waves-effect waves-light wildbtn col s6 offset-s3" type="submit" onclick="window.location.href='WCS/WildExchangeBundle/Ressources/config/views/User/edit'" name="action">
                    Modifier
                    <i class="material-icons right">input</i>
                </button>
            </div>

        </form>
    </div>

{% endblock %}
